<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="light"
        android:entries="@array/pref_theme_entries"
        android:entryValues="@array/pref_theme_values"
        android:icon="@drawable/ic_setting_theme"
        android:key="pref_theme"
        android:summary="@string/pref_requires_restart_summary"
        android:title="@string/pref_theme_title" />
    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:icon="@drawable/ic_setting_enable_action_bar"
        android:key="pref_actionbar_switch"
        android:summary="@string/pref_enable_actionbar_summary"
        android:title="@string/pref_enable_actionbar_title" />
    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:icon="@drawable/ic_setting_enable_statusbar"
        android:key="pref_statusbar_switch"
        android:summary="@string/pref_enable_actionbar_summary"
        android:title="@string/pref_enable_statusbar_title" />
    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:icon="@drawable/ic_setting_keep_screen_on"
        android:key="pref_wakelock_switch"
        android:title="@string/pref_wakelock_title" />
    <ListPreference
        android:defaultValue="name"
        android:entries="@array/pref_app_sort_entries"
        android:entryValues="@array/pref_app_sort_values"
        android:icon="@drawable/ic_setting_sort"
        android:key="pref_app_sort"
        android:summary="@string/pref_requires_restart_summary"
        android:title="@string/pref_app_sort_title" />
    <Preference
        android:key="pref_default_settings"
        android:icon="@drawable/ic_setting_default"
        android:title="@string/pref_default_settings">
        android:icon="@drawable/ic_setting_key_map"
        android:title="@string/pref_map_keys">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="ru.playsoftware.j2meloader.settings.KeyMapperActivity"
            android:targetPackage="ru.playsoftware.j2meloader" />
    </Preference>
</androidx.preference.PreferenceScreen>